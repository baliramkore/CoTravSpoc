<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dip"
    android:gravity="center"
    android:layout_gravity="center">


    <TextView
        android:id="@+id/app_name"
        android:layout_width="220dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText"
        android:layout_height="wrap_content"
        android:text="Spoc App" />

    <LinearLayout
        android:id="@+id/main"
        android:layout_below="@+id/app_name"
        android:background="@drawable/round_corner"
        android:padding="5dp"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt"
            android:layout_marginLeft="@dimen/standard_10"
            android:layout_marginRight="@dimen/standard_10"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:text="Bookings Pending for Approval"
            android:layout_width="wrap_content"
            android:layout_height="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/total_name"
                android:textAlignment="center"
                android:layout_below="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:text="Total"
                android:layout_weight="0.8"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/taxi_name"
                android:textAlignment="center"
                android:layout_below="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:text="Taxi"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp" />





            <TextView
                android:id="@+id/bus_name"
                android:textAlignment="center"
                android:layout_below="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:text="Bus"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/pa_taxi"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/total"
                android:textAlignment="center"
                android:layout_weight="0.8"
                android:layout_below="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:maxLines="1"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="36sp" />
            <TextView
                android:id="@+id/pa_taxi"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_below="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="26sp" />
            <TextView
                android:id="@+id/pa_bus"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_below="@+id/txt"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/pa_taxi"
                android:maxLines="1"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="26sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">




            <TextView
                android:id="@+id/hotel_name"
                android:layout_below="@+id/txt"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/pa_bus"
                android:text="Hotel"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp" />
            <TextView

                android:textAlignment="center"
                android:id="@+id/train_name"
                android:layout_below="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_toRightOf="@+id/pa_hotel"
                android:layout_weight="1"
                android:text="Train"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp" />
            <TextView
                android:textAlignment="center"
                android:id="@+id/flight_name"
                android:layout_below="@+id/txt"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="18dp"
                android:layout_toRightOf="@+id/pa_train"

                android:text="Flight"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pa_hotel"
                android:textAlignment="center"
                android:layout_below="@+id/txt"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/pa_bus"

                android:maxLines="1"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="26sp" />



            <TextView
                android:id="@+id/pa_train"
                android:textAlignment="center"
                android:layout_below="@+id/txt"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/pa_hotel"

                android:maxLines="1"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="26sp" />


            <TextView
                android:id="@+id/pa_flight"
                android:textAlignment="center"
                android:layout_below="@+id/txt"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/pa_train"
                android:maxLines="1"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="26sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

