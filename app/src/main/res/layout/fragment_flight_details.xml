<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightwhite"
    tools:context=".fragments.showflight.FlightDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/container_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/parent_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/lightwhite"
                android:orientation="vertical"
                android:layout_alignParentLeft="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightwhite"
                    card_view:cardCornerRadius="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:elevation="3dp"
                    >
                    <LinearLayout
                        android:id="@+id/basic_detail_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Basic details"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:layout_margin="10dp"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/white"
                            android:background="@color/colorPrimary"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/refrence_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:layout_weight="1"
                                android:text=""
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/booking_status"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="viewEnd"
                                android:padding="2dp"
                                android:layout_marginRight="10dp"
                                android:text=""
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="16sp"
                                android:gravity="end" />
                        </LinearLayout>



                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorAccent" />




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="Assesment Code: "
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/assesment_code"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text=""
                                android:textColor="@color/colorPrimaryText"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="Assesment City: "
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/assesment_city"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text=""
                                android:textColor="@color/colorPrimaryText"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="Booking Date: "
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/booking_date"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text=""
                                android:textColor="@color/colorPrimaryText"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="Booking Reason: "
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/booking_reason"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text=""
                                android:textColor="@color/colorPrimaryText"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@drawable/circle"
                                    android:backgroundTint="#8cff96" />

                                <TextView
                                    android:id="@+id/pickup_time"
                                    android:layout_width="105dp"
                                    android:layout_height="wrap_content"
                                    android:text="- - : - -   - -"
                                    android:textSize="20dp"
                                    android:visibility="gone"
                                    android:textColor="@color/colorPrimaryText"
                                    android:layout_marginStart="20dp"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_marginLeft="20dp"/>
                                <TextView
                                    android:id="@+id/pickup_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="NA"
                                    android:layout_marginStart="10dp"
                                    android:textSize="20dp"
                                    android:fontFamily="@font/montserrat"
                                    android:textColor="@color/colorPrimaryText"
                                    />


                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp">
                                <TextView
                                    android:id="@+id/pickup_date"
                                    android:layout_width="105dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat"
                                    android:text="- -   - - -   - - - -" />
                                <TextView
                                    android:id="@+id/pickup_boardingpoint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat"
                                    android:text="" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <ImageView

                                    android:layout_gravity="center"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@drawable/circle"
                                    android:backgroundTint="#c9684b" />

                                <TextView
                                    android:id="@+id/drop_time"
                                    android:layout_width="105dp"
                                    android:layout_height="wrap_content"
                                    android:text="- - : - -"
                                    android:textSize="20dp"
                                    android:visibility="gone"
                                    android:fontFamily="@font/montserrat"
                                    android:textColor="@color/colorPrimaryText"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginLeft="20dp"/>
                                <TextView
                                    android:id="@+id/drop_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="NA"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/montserrat"
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="20dp"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp">
                                <TextView
                                    android:id="@+id/drop_date"
                                    android:layout_width="105dp"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_height="wrap_content"
                                    android:text="" />
                                <TextView
                                    android:id="@+id/drop_city_endpoint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat"
                                    android:text="" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorAccent" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightwhite"
                    card_view:cardCornerRadius="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:elevation="3dp"
                    >

                    <LinearLayout
                        android:id="@+id/flight_details_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Flight Details"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:layout_margin="10dp"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/white"
                            android:background="@color/colorPrimary"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="Ticket no : "
                                android:textStyle="bold"
                                android:fontFamily="@font/montserrat"
                                android:textColor="@android:color/black"
                                android:textIsSelectable="true"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/ticket_number"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text=""
                                android:fontFamily="@font/montserrat"
                                android:textColor="@color/colorPrimaryText"
                                android:textIsSelectable="true"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="No Of Seats : "
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/number_seats"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text=""
                                android:textColor="@color/colorPrimaryText"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="Boarding Point :"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/boarding_point"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text=""
                                android:textColor="@color/colorPrimaryText"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="Flight Type : "
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/detail_flight_type"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text=""
                                android:textColor="@color/colorPrimaryText"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="Pnr no : "
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/pnr_number"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text=""
                                android:textColor="@color/colorPrimaryText"
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorAccent" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/passenger_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightwhite"
                    card_view:cardCornerRadius="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="15dp"
                    android:padding="5dp"
                    android:elevation="3dp"
                    >
                    <LinearLayout
                        android:id="@+id/passenger_detail_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="2dp"
                        android:visibility="gone"
                        android:background="@android:color/white"
                        android:orientation="vertical" >

                        <!-- #47B4F1 -->

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="5dp"
                            android:layout_margin="10dp"
                            android:textIsSelectable="true"
                            android:text="Passengers Details"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/montserrat"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="165dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:padding="2dp"
                                android:text="Number of Passengers"
                                android:textIsSelectable="true"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginLeft="10dp" />

                            <TextView
                                android:id="@+id/no_of_emp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:padding="2dp"
                                android:text=""
                                android:textIsSelectable="true"
                                android:fontFamily="@font/montserrat"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:padding="2dp"
                                android:id="@+id/passengers_list"
                                android:textIsSelectable="true"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:text=""
                                android:fontFamily="@font/montserrat"
                                android:layout_marginLeft="10dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            style="@style/Divider"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </RelativeLayout></ScrollView>
    <ProgressBar
        android:id="@+id/progressBar_bookingDetails"
        style="?android:attr/progressBarStyle"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>